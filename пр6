#1
from random import *
t = [randint(1,8) for i in range(10)]
s=0
umn=1
for i in range(len(t)):
    s+=t[i]
    umn*=t[i]
print("сумма = ",s)
print("произведение = ",umn)

#2
from random import *
t = [randint(0,9) for i in range(10)]
s=0
for i in range(len(t)):
    s+=t[i]/10
print(t)
print(s)
for i in range(len(t)):
    if t[i] == 0:
        t[i] = s
print(t)
